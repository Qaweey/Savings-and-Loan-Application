@using SavingandLoanProject.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "RegisterNewUser";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<div class="main">

    <section class="signup">
        <!-- <img src="images/signup-bg.jpg" alt=""> -->
        <div class="container">
            <div class="signup-content">
                <form method="POST"  class="signup-form">
                    <h2 class="form-title">Create account</h2>

                    <div class="form-group">
                        <input type="email" class="form-input" asp-for="EmailAddress" placeholder="Your Email" />
                        <span asp-validation-for="EmailAddress">  </span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-input" asp-for="Password" placeholder="Password" />
                        <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                        <span asp-validation-for="Password">  </span>

                    </div>
                    <div class="form-group">
                        <input type="password" class="form-input" asp-for="ConfirmPassword" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword">  </span>
                    </div>

                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Sign up" />
                    </div>
                </form>
                <p class="loginhere">
                    Do you have an account already ? <a asp-controller="Account" asp-action="Login">Login here</a>
                </p>
            </div>
        </div>
    </section>

</div>
<script src="vendor/jquery/jquery.min.js"></script>
<script src="js/main.js"></script>